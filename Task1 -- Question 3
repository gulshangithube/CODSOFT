 import java.util.* ;
 class kapilchauhan{
    public static void main(String[] args){
            double a = Math.random();
            int range = 100;//int a = 56;
             int b = ((int)(a*range)) + 1 ;
        Scanner sc = new Scanner(System.in);
        System.out.println("Guess the number");
        int num = sc.nextInt();
        if(num<b/2){
            System.out.println("Your number is  less then half of generated number");
        }else if (num<b){
            System.out.println("Your number is less then  generated number");
        }
        
         else if(num<2*b){
            System.out.println("Your number is  less then twice of generated number");
        }
        else if (num>2*b){
            System.out.println("Your number is greater then twice of generated number");
        }
        
          else if (num>b){
            System.out.println("Your number is  greater");
        }
   
        else{
            System.out.println("You guess the correct number");
        }
        System.out.println(b);
        
        
    }
}
